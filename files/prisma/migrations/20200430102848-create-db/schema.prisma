datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Doc {
  id Int @id @default(autoincrement())
  title String?
  events DocEvents[]
  createddAt DateTime @default(now())
  updetedAt DateTime
}

model DocEvents {
  id Int @id @default(autoincrement())
  doc Doc @relation(fields: [docId], references: [id])
  docId Int
  event AllowedEvent
}

enum AllowedEvent {
  DROPPED
  REMOVED
  UPLOADED
  DOWNLOADED
  DELETED
  TITLED
  SAVED
}